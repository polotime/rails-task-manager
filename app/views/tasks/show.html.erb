<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p><%= link_to "Edit Task",
  edit_task_path(@task)
%></p>
<p><%= link_to "Delete Task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
<p><%= link_to "All Tasks",
  tasks_path
%></p>
